{
  "rules": {
    ".read": "auth != null && auth.token.role == 'admin'",
    ".write": "auth != null && auth.token.role == 'admin'",
    "categories": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.role == 'admin'",
      "$categoryId": {
        ".validate": "newData.hasChildren(['name'])",
        "name": {
          ".validate": "newData.isString()"
        },
        "$other": {
          ".validate": "false"
        },
        ".write": "auth != null && auth.token.role == 'admin'"
      }
    },
    "categoryKeys": {
      ".read": "auth != null",
      ".write": "auth != null && (auth.token.role == 'admin' || auth.token.role == 'editor')"
    },
    "posts": {
      ".read": "auth != null",
      ".write": "auth != null && (auth.token.role == 'admin' || auth.token.role == 'editor')",
      "$postId": {
        ".validate": "newData.hasChildren(['title', 'author', 'status', 'category', 'publishTime'])",
        "title": {
          ".validate": "newData.isString()"
        },
        "subtitle": {
          ".validate": "newData.isString()"
        },
        "author": {
          ".validate": "newData.isString()"
        },
        "status": {
          ".validate": "newData.isString() && (newData.val() == 'published' || newData.val() == 'draft' || newData.val() == 'hidden')"
        },
        "category": {
          ".validate": "newData.isString()"
        },
        "publishTime": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": "false"
        },
        ".write": "auth != null && newData.parent().parent().child('posts/' + $postId + '/author').val() == auth.uid"
      }
    },
    "postContents": {
      ".read": "auth != null",
      ".write": "auth != null && (auth.token.role == 'admin' || auth.token.role == 'editor')",
      "$postId": {
        ".validate": "newData.hasChildren(['content'])",
        "content": {
          ".validate": "newData.hasChildren()"
        },
        "$other": {
          ".validate": "false"
        }
      }
    },
    "team": {
      ".read": "auth != null && auth.token.role != null",
      "$userId": {
        ".validate": "newData.hasChildren(['disabled'])",
        "disabled": {
          ".validate": "newData.isBoolean()"
        },
        "$other": {
          ".validate": "false"
        },
        ".write": "auth != null && auth.token.role == 'admin'",
        ".indexOn": [
          "disabled"
        ]
      }
    }
  }
}
