{
  "rules": {
    ".read": "auth != null && auth.token.role == 'admin'",
    ".write": "auth != null && auth.token.role == 'admin'",
    "categories": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.role == 'editor'",
      "$id": {
        ".validate": "newData.hasChildren(['name'])",
        "name": {
          ".validate": "newData.isString()"
        },
        "$other": {
          ".validate": "false"
        }
      }
    },
    "categoryKeys": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.role == 'editor'"
    },
    "posts": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.role == 'editor'",
      "$id": {
        ".validate": "newData.hasChildren(['title', 'author', 'status', 'category', 'publishTime'])",
        "title": {
          ".validate": "newData.isString()"
        },
        "subtitle": {
          ".validate": "newData.isString()"
        },
        "author": {
          ".validate": "newData.isString()"
        },
        "status": {
          ".validate": "newData.isString() && (newData.val() == 'published' || newData.val() == 'draft' || newData.val() == 'hidden')"
        },
        "category": {
          ".validate": "newData.isString()"
        },
        "publishTime": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": "false"
        }
      }
    },
    "postContents": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.role == 'editor'",
      "$id": {
        ".validate": "newData.hasChildren(['content'])",
        "content": {
          ".validate": "newData.hasChildren()"
        },
        "$other": {
          ".validate": "false"
        }
      }
    },
    "team": {
      "$id": {
        ".validate": "newData.hasChildren(['role'])",
        "role": {
          ".validate": "newData.isString() && (newData.val() == 'admin' || newData.val() == 'editor' || newData.val() == 'author')"
        },
        "$other": {
          ".validate": "false"
        }
      }
    }
  }
}
